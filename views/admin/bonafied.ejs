<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <title>Bonafied</title>
  </head>
  <body>
    <%- include("../components/admin-header");-%>
    <div class="container" id="bonafied">
      <div class="all-bonafides">
        <table>
          <thead>
            <th>Rollno.</th>
            <th>Date</th>
            <th>Action</th>
          </thead>
          <tbody>
            <%if(data===null){%>
                <tr>
                    <td>No Bonafides</td>
                </tr>
            <%}%>
            <%if (data!=null) {%>
                <%data.forEach(val=>{%>
                    <tr>
                        <td><%=val.rollno%></td>
                        <td><%=val.date%></td>
                        <td><a href="/api/approve/<%=val.rollno%>" class="Approve" >Approve</a> <a href="/api/reject/<%=val.name%>" class="delete">Reject</a></td>
                    </tr>
                <%})%>
            <%}%>
          </tbody>
        </table>
      </div>
    </div>
  </body>
  <script src="/js/getbonafied.js"></script>
</html>
